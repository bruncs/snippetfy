{% extends 'layouts/default.njk' %}
{% block body %}
<div class="auth-wrapper">
  <form method="POST" action="/authenticate" class="form-signin">
  <h1>Sign In</h1>

  <input name="email" type="email" placeholder="Type your email">
  <input name="password" type="password" placeholder="Type your password">

  <button type="submit">Sign In</button>

  <a href="/signup">Create a free account</a>
</div>
{% endblock %}
